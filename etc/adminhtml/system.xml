<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales">
            <group id="sequence" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="0" showInStore="1">
                <label>Sequence</label>
                <group id="template" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="0" showInStore="1">
                    <label>Configuration options for: </label>
                    <field id="prefix" translate="label" type="text" sortOrder="10"
                           showInDefault="1" showInWebsite="0" showInStore="1" canRestore="0">
                        <label>Prefix</label>
                    </field>
                    <field id="suffix" translate="label" type="text" sortOrder="20"
                           showInDefault="1" showInWebsite="0" showInStore="1" canRestore="0">
                        <label>Suffix</label>
                    </field>
                    <field id="step" translate="label" type="text" sortOrder="30"
                           showInDefault="1" showInWebsite="0" showInStore="1" canRestore="0">
                        <label>Step</label>
                    </field>
                    <field id="is_active" translate="label" type="select" sortOrder="40"
                           showInDefault="1" showInWebsite="0" showInStore="1" canRestore="0">
                        <label>Is Active</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
